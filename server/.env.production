# Production Environment Configuration for SIMKA
# Copy this file to .env and update with your production values

# Database Configuration - PostgreSQL for Production
USE_POSTGRES=true
DB_HOST=your_postgres_host
DB_PORT=5432
DB_NAME=simka_production
DB_USER=your_postgres_user
DB_PASSWORD=your_secure_postgres_password

# JWT Configuration - CRITICAL: Generate a new secure secret
JWT_SECRET=GENERATE_NEW_SECURE_JWT_SECRET_HERE
JWT_EXPIRE=7d

# Server Configuration
NODE_ENV=production
PORT=5001
CLIENT_URL=https://your-domain.com

# Email Configuration - Required for notifications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@domain.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM_NAME=SIMKA System

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Notification Settings
NOTIFICATION_DAYS_BEFORE=30,60,90

# Security Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/simka.log
